<div class="row">
  <h3>イラスト上達への軌跡</h3>
</div>
<div class="form-group">
  <%= form_with model: @article, url: articles_path, local:true do |f| %>

    <div class="row">
      <div class="col-lg-12">
        <h5>画像</h5>
        <%= f.attachment_field :image %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <h5>タイトル</h5>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-9">
        <h5>イントロダクション</h5>
        <%= f.text_area :body, class: "form-control", rows: "5", placeholder: '投稿するイラストの説明を記述' %>
      </div>
    </div>

    <%= f.submit '新規作成', class: "mt-3" %><br />
  <% end %>
</div>
